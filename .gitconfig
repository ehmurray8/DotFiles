# This is Git's per-user configuration file.
[user]
	name = Emmet Murray
	email = emmet.murray@etrade.com
[push]
	default = simple
[credential]
	helper = cache --timeout=7200
[color]
    branch = true
    interactive = true
    diff = true
    status = true
    showbranch = true
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green 
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
    new = green bold
    whitespace = red reverse
    commit = yellow bold
[color "diff-highlight"]
	oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    oldHighlight = green bold 22
[color "status"]
    added = green
    changed = yellow
    untracked = cyan
[core]
	editor = vim
[alias]
    al = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 = \\2/g' | less
    a = add .
    b = branch
    bl = blame -wMc
    ca = commit --amend
    cb = checkout -b
    ch = checkout HEAD
    cl = clone
    cm = commit --message
    clear = reset --hard HEAD cm = commit -m
    co = checkout
    cof = ! git co $(fzf)
    d = diff
    dh = diff HEAD
    dhf = !git diff HEAD $(fzf)
    ds = diff --name-status
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lga = log -p
    lgf = log -p -M --follow -- stat -- init.vim
    sh = show --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    m = merge
    ph = push
    pht = push --tags
    pl = pull
    pup = push --set-upstream origin 
    rb = rebase
    rbc = rebase --continue
    rba = rebase --abort
    rma = rm -r --cached .
    rmb = branch -d
    set-email = config user.email
    sd = diff HEAD stash@{0} --name-status
    sdi = "!f() { git diff HEAD stash@{$1} --name-status; }; f"
    sdf = diff HEAD stash@{0}
    sdfi = "!f() { git diff HEAD stash@{$1}; }; f"
    sd = stash drop
    spi = "!f() { git stash drop stash@{$1}; }; f"
    sl = stash list
    st = status -sb
    stha = stash push --include-untracked
    sp = stash pop
    spi = "!f() { git stash pop stash@{$1}; }; f"
[blame]
    date = relative
[status]
    showUntrackedFiles = all
[format]
	pretty = medium
[pager]
    diff = diff-so-fancy | less --tabs=1,5 -R
    show = diff-so-fancy | less --tabs=1,5 -R
[help]
	autoCorrect = -1
[merge]
	stat = true
	tool = vimdiff
	conflictstyle = diff3
